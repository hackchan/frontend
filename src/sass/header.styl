.menu
  display none

.header
    background $gris_oscuro
    color $blanco
    height 3.5em
    border-bottom 1px solid rgba($gris_masclaro,.4)
    box-shadow 0px 2px 6px rgba(black,.2)
    
    a
     display block
    .title
      font-size 1.1em
      text-align center
      margin 0
      line-height 3.5em
      p
        margin 0
    .button-menu
       position absolute
       top 50%
       left 1em
       margin-top -10px
       color $naranja_claro
       font-size 1.8em
    .logo
       display none


.input
   position relative
   //top -5px
   border-bottom 1px solid $gris_masclaro
   height 2.0em
   border-radius 5px
   padding 0 1.2em 0 2em  
   margin-right .5em 
.search-icon
   color $gris_oscuro
   position absolute
   top .5em
   left .5em
   font-size 1.2em

.close-icon
  position absolute
  top .5em
  color $gris_oscuro  
  right 1em 
  
   
