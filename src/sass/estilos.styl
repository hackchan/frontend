//si aperece un nuevo motor por ejemplo mz3g solo es adicionarlo al vendor-prefixes
//vendor-prefixes = webkit o ms moz official mz3g

a
 text-decoration none

body
  background $blanco
  font-size 16px
  font-family 'Varela Round', sans-serif

img
 vertical-align: top 

ul
  margin 0
  padding 0 
  

.container
  padding 1.4rem
  font-size 0
  text-align center

figure
  margin 0

.song
  display inline-block
  background $blanco
  width 8rem
  font-size 1rem
  margin-right 1em
  margin-bottom 1em
  text-align left
  .image img
    width 128px
 
  &:nth-child(even)
    margin-right 0
  p
    margin .5em 0
.name
   color $gris_oscuro

.name
   color $gris_claro   



