.playing
    &.small
        width 20em
        margin 0 auto
        
    
     .image
            position relative
        img 
            width:320px
     .play
       padding 1em 0
       font-size 2em
       
       a
        margin-right: .5em
        color:$gris_claro
        &:nth-child(even)
         color:$gris_oscuro
        &:last-child
          margin-right 0
        &.red
         color red
     .description
       border-bottom 1px solid $gris_claro  
     .actions
       text-align right
       padding 1em
       background rgba(black,.5)
       position absolute
       bottom 0
       left 0
       right 0
       a
        color white
        font-size 1.4em
        margin-right: .5em
        
        &:last-child
          margin-right 0